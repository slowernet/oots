<% content_for :page_body do %>
	<h1><%= @venue.name %></h1>

	<div style="margin: 1em 0;">
		<%= @venue.address %>,
		<%= @venue.city %>
	</div>
	
	<div>
		<a href='#' id="open-add-bond">&rarr; Associate a team with this venue?</a>
		<ul id="add-bond" style="display: block;">
			<li>
				<label>Team<br/>
					<input type="text" name="team-name" id="bond-team-name" data-teams='<%= @teams.to_json %>'>
				</label>
			</li>
			<li>
				<label>Game is on</label>
				<label><%= radio_button_tag(:strength, :value => '1') %> Always</label>
				<label><%= radio_button_tag(:strength, :value => '2') %> Often</label>
				<label><%= radio_button_tag(:strength, :value => '3') %> Sometimes &ndash; check first</label>
			</li>
			<li>
				<label>Note<br/>
					<input type="text" name="note">
				</label>
			</li>
			<li>
				<%= submit_tag('Save', :class => 'rgbabutton large blue') %>
			</li>
		</ul>
	</div>
<% end %>