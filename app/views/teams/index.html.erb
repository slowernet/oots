<% content_for :page_body do %>
	<ul>
		<% @teams.each do |t| %>
			<li><%= "<a href='#{t.permalink}'>#{t.name}</a>" %> <span style="color: #666;">[<%= t.league %>, <%= t.country %>]</span></li>
		<% end %>
	</ul>
	
	<div style="padding: 1em 0;">
		Your team missing? Suggest it via Twitter: 
		<div style="display: inline-block; vertical-align: middle;"><a href="http://twitter.com/share" class="twitter-share-button" data-url="http://outoftownsports.com" data-text="#suggestion" data-count="none" data-via="outoftownsports" data-related="outoftownsports">Tweet</a></div>
	</div>
	
	<script type="text/javascript" charset="utf-8">
		head.js('http://platform.twitter.com/widgets.js');
	</script>
	
<% end %>